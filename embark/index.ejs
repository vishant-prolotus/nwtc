    <script src="js/app.js"></script>
    <script>
        $(function() {
            $(".form-popup-trigger").on("click", function() {
                var formPopup = $(this).next(".form-popup");
                $(".form-popup").fadeOut();
                $(".fs-overlay").fadeIn();
                $(formPopup).fadeIn();
            });
            $(".fs-overlay, .form-popup .form-popup-close").on("click", function() {
                $(".fs-overlay").fadeOut();
                $(".form-popup").fadeOut();
            });
        });

    </script>
</head>

<body>
    <header class="site-header clearfix">
        <div class="wrapper">
            <div class="pull-left">Welcome, <strong>Aditya</strong></div>
            <div class="pull-right logout"><a href="/logout">Logout</a></div>
        </div>
    </header>
    <div class="block-form has-two-columns">
        <div class="wrapper">
            <div id="deployToken" class="block-form-group">
                <i class="form-group-icon"><img src="images/deploy-token.svg" alt="Deploy new Token" /></i>
                <div class="form-group-text form-popup-trigger">
                    <h3 class="heading">Deploy new Token</h3>
                </div>
                <div class="form-popup">
